EXTRADEFS = -DWINE_NO_UNICODE_MACROS
TOPSRCDIR = @top_srcdir@
TOPOBJDIR = ../..
SRCDIR    = @srcdir@
VPATH     = @srcdir@
MODULE    = wineboot.exe
APPMODE   = -mconsole
IMPORTS   = uuid advapi32 kernel32 ntdll
DELAYIMPORTS = shell32 shlwapi version user32

C_SRCS = \
	shutdown.c \
	wineboot.c

RC_SRCS = \
	wineboot_Da.rc \
	wineboot_De.rc \
	wineboot_En.rc \
	wineboot_Es.rc \
	wineboot_Fr.rc \
	wineboot_He.rc \
	wineboot_It.rc \
	wineboot_Ja.rc \
	wineboot_Ko.rc \
	wineboot_Lt.rc \
	wineboot_Nl.rc \
	wineboot_No.rc \
	wineboot_Pl.rc \
	wineboot_Pt.rc \
	wineboot_Ro.rc \
	wineboot_Ru.rc \
	wineboot_Si.rc \
	wineboot_Sr.rc \
	wineboot_Sv.rc \
	wineboot_Uk.rc \
	wineboot_Zh.rc

MANPAGES = wineboot.man

@MAKE_PROG_RULES@

all: $(MANPAGES)

install-man-pages:: $(MANPAGES) $(DESTDIR)$(mandir)/man$(prog_manext)
	$(INSTALL_DATA) wineboot.man $(DESTDIR)$(mandir)/man$(prog_manext)/wineboot.$(prog_manext)

@WOW64_DISABLE@ install install-lib:: install-man-pages

uninstall::
	$(RM) $(DESTDIR)$(mandir)/man$(prog_manext)/wineboot.$(prog_manext)
