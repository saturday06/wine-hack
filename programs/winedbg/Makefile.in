TOPSRCDIR = @top_srcdir@
TOPOBJDIR = ../..
SRCDIR    = @srcdir@
VPATH     = @srcdir@
MODULE    = winedbg.exe
APPMODE   = -mconsole
IMPORTS   = psapi dbghelp advapi32 kernel32 ntdll
DELAYIMPORTS = user32 gdi32
EXTRALIBS = @LIBPOLL@
EXTRADEFS = -DWINE_NO_UNICODE_MACROS

C_SRCS = \
	be_alpha.c \
	be_i386.c \
	be_ppc.c \
	be_x86_64.c \
	break.c \
	crashdlg.c \
	db_disasm.c \
	db_disasm64.c \
	display.c \
	expr.c \
	gdbproxy.c \
	info.c \
	memory.c \
	source.c \
	stack.c \
	symbol.c \
	tgt_active.c \
	tgt_minidump.c \
	tgt_module.c \
	types.c \
	winedbg.c

RC_SRCS = \
	rsrc_Da.rc \
	rsrc_De.rc \
	rsrc_En.rc \
	rsrc_Es.rc \
	rsrc_Fr.rc \
	rsrc_It.rc \
	rsrc_Ko.rc \
	rsrc_Lt.rc \
	rsrc_Nl.rc \
	rsrc_No.rc \
	rsrc_Pl.rc \
	rsrc_Pt.rc \
	rsrc_Ro.rc \
	rsrc_Ru.rc \
	rsrc_Si.rc \
	rsrc_Sr.rc \
	rsrc_Sv.rc \
	rsrc_Uk.rc

LEX_SRCS   = debug.l
BISON_SRCS = dbg.y

MANPAGES = winedbg.man

@MAKE_PROG_RULES@

all: $(MANPAGES)

install-man-pages:: $(MANPAGES) $(DESTDIR)$(mandir)/man$(prog_manext)
	$(INSTALL_DATA) winedbg.man $(DESTDIR)$(mandir)/man$(prog_manext)/winedbg.$(prog_manext)

@WOW64_DISABLE@ install install-lib:: install-man-pages

uninstall::
	$(RM) $(DESTDIR)$(mandir)/man$(prog_manext)/winedbg.$(prog_manext)
